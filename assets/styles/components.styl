.no-arrows.theme--light.v-tabs .v-tab--active:hover::before, .theme--light.v-tabs .v-tab--active::before
  opacity 0

.v-tabs.no-arrows
  .v-slide-group--is-overflowing
    .v-slide-group__prev
      display none !important
      visibility hidden


::-webkit-scrollbar-track
  -webkit-box-shadow inset 0 0 8px rgba(0, 0, 0, 0.3)
  box-shadow inset 0 0 8px rgba(0, 0, 0, 0.3)
  background-color #f5f5f5

::-webkit-scrollbar
  width 7px
  background-color #f5f5f5

::-webkit-scrollbar-thumb
  -webkit-box-shadow inset 0 0 8px rgba(0, 0, 0, 0.3)
  box-shadow inset 0 0 8px rgba(0, 0, 0, 0.3)
  background-color #847F82
  border-radius 20px

.v-expansion-panel-content__wrap
  padding 0px !important

.blue-10
  background $blue-10 !important

.cursor-pointer
  cursor pointer

.cursor-not-allowed
  cursor not-allowed

.card
  border-radius: 8px
  box-shadow: 0px 4px 16px rgba(113, 115, 115, 0.08) !important
  &._flat
    box-shadow: none !important

  &._orange
    background-color: #f37021 !important

  &._error
    background: #e53935 !important

  &._green
    background: #009444 !important

  &._blue
    background: #EBF6FE !important

  &._green-light
    background: #dbf1da !important

  &._grey-light
    background: #f3f3f3 !important

.divider-dashed
  /* Neutral/Black-20 */
  border-bottom: 0.5px dashed #D0D0D0

.pointer-none
  pointer-events none

.animate-rotate
   transform rotate(180deg)
   -webkit-transform rotate(180deg)
   -ms-transform rotate(180deg)

// PRODUCT DETAIL
.grow-enter-active {
  transition all .5s
  max-width 24px
}
.grow-enter  {
  max-width 8px
}

.indicator
  width 6px
  height 6px
  margin 0 2px
  border-radius 50%
  background rgba(0, 23, 31, 0.24)
  &.active
    width 16px
    background var(--v-primary-base)
    border-radius 10px
    border 1px solid #FFFFFF

// Pagination
@media (min-width 960px)
  ::v-deep
    .v-pagination.v-pagination
      justify-content start


.v-pagination__item,
.v-pagination__navigation
  box-shadow none
  background-color: var(--v-sblack5-base) !important
.theme--light.v-pagination .v-pagination__item,
.v-pagination__more
  color: var(--v-sblack60-base)
.theme--light.v-pagination .v-pagination__item--active
  color: var(--v-white-base)
.v-pagination__more
  background-color: var(--v-sblack5-base) !important
